<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartBulaSite</title>
    <script src="https://code.jquery.com/jquery-1.9.1.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/js/site.js" />
</head>
<body>
 
    <section>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light module parallax">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="logo"><img src="~/images/logo.png" alt="#" class="logoImg"/></a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="linkBar" asp-area="" asp-controller="Home" asp-action="Index">Início</a>
                        </li>
                        <li class="nav-item">
                            <a class="linkBar" asp-area="" asp-fragment="sectionCuriosidades" asp-controller="Home" asp-action="Index">Curiosidades</a>
                        </li>
                        <li class="nav-item">
                            <a class="linkBar" asp-area="" asp-fragment="fundo2_qm" asp-controller="Home" asp-action="Index">Quem  Somos</a>
                        </li>
                    </ul>
                    <div id="btnDonwload">
                        <i class="fa-brands fa-google-play iconStore" style="color: #000000;"></i>
                        <a asp-fragment="baixar">Donwload</a>
                    </div>
                </div>
            </div>
        </nav>
    </section>

    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>


</body>

</html>
<footer class="footer text-muted">
    @*border-top*@

    <div id="imgFooter" class="module parallax">



        <div id="gridFooter">
            <div>
                <h4>​Fale conosco</h4>
                <p> - codeBreaker@site.com</p>
                <a href="http://www.instagram.com" target="_blank"><i class="fa-brands fa-instagram fa-2x icons_footer" style="color: #fff;"></i></a>
                <a href="http://www.linkedin.com" target="_blank"><i class="fa-brands fa-linkedin fa-2x icons_footer" style="color: #fff;"></i></a>
                <a href="http://www.github.com" target="_blank"><i class="fa-brands fa-square-github fa-2x icons_footer" style="color: #fff;"></i></a>
</div>

            <div>
                <h4>Mapa do site</h4>
                <ul class="mapaSite">
                    <li>
                        <a asp-controller="Home" asp-action="Index">- Início</a>
                    </li>
                    <li>
                        <a asp-fragment="sectionCuriosidades" asp-controller="Home" asp-action="Index">- Curiosidades</a>
                    </li>
                    <li> 
                        <a asp-fragment="fundo2_qm" asp-controller="Home" asp-action="Index">- Quem Somos</a>
                    </li>
                </ul>
            </div>

            <div>
                <h4>QR-Code</h4>
                <img id="QRcode" src="~/images/https___github.com_.png" alt="QR-code" />
            </div>

        </div>

        &copy; 2023 - SmartBula - <a asp-area="" asp-controller="Home" asp-action="Privacy">Code Breaker</a>

    </div>
</footer>
<script src="https://kit.fontawesome.com/77b5f27565.js" crossorigin="anonymous"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)

